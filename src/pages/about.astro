---
import companyLogo from "@/assets/fsc.jpg"
import Footer from "@/components/Footer.astro"
import Header from "@/components/Header.astro"
import Layout from "@/layouts/Layout.astro"
import t from "@/utils/i18n"

const locale =
	(Astro.preferredLocale || Astro.currentLocale) === "ja" ? "ja" : "en"
---

<Layout title={t("about.title", locale)}>
  <Header />
  <main>
    <h1>{t("about.title", locale)}</h1>

    <div class="about-section">
      <img class="avatar" src={companyLogo.src} alt={t("about.logoAlt", locale)} />
    </div>

    <div class="content">
      <h2>{t("about.sloganTitle", locale)}</h2>
      <p>{t("about.slogan", locale)}</p>

      <h2>{t("about.purposeTitle", locale)}</h2>
      {
        t("about.purpose", locale)
          .split("\n")
          .map((paragraph) => <p>{paragraph}</p>)
      }
    </div>
  </main>
  <Footer />
</Layout>

<style>
  main {
    max-width: 800px;
    margin: 0 auto;
    padding: 2rem;
  }
  .about-section {
    margin: 3rem 0;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  .avatar {
    background: #4ade80;
    width: 100px;
    margin: 0 auto 16px;
    color: white;
    font-weight: bold;
    font-size: 2rem;
  }
  .content {
    line-height: 1.6;
    font-size: 1.1rem;
  }
</style>
