---
import Footer from "@/components/Footer.astro"
import Header from "@/components/Header.astro"
import Layout from "@/layouts/Layout.astro"
import organization from "@/assets/organization.jpg"

const locale = Astro.preferredLocale || Astro.currentLocale || "en"
---

<Layout title="Organization Chart">
  <Header />
  <main>
    <h1>Our Organization</h1>
    <img src={organization.src} alt="Organization Structure" class="org-image" />
  </main>
  <Footer />
</Layout>

<style>
  .org-image {
    width: 100%;
    margin: 2rem auto;
    display: block;
    border-radius: 12px;
    transition: transform 0.3s ease;
  }
</style>
